{
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "rootDir": "./src",
        "strict": true,
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,
        "outDir": "dist",
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}